% UTC-Beamer
% Inner theme file (controls slide content appearance: blocks, lists, captions, etc.)

% Define boolean flags
\def\beamer@themeinner@true{true}
\def\beamer@themeinner@false{false}
\def\beamer@themeinner@rounded{true}     % Use rounded blocks by default
\def\beamer@themeinner@shadowed{false}   % No shadows by default

% Allow theme options: rounded=true/false, shadowed=true/false
\DeclareOptionBeamer{rounded}{\def\beamer@themeinner@rounded{#1}}
\DeclareOptionBeamer{shadowed}{\def\beamer@themeinner@shadowed{#1}}
\ProcessOptionsBeamer

% Only apply this theme in presentation mode
\mode<presentation>

% Use 'circles' as base inner theme
\useinnertheme{circles}

% Configure block appearance based on options
\ifx\beamer@themeinner@rounded\beamer@themeinner@true
  \setbeamertemplate{blocks}[rounded][shadow=\beamer@themeinner@shadowed]
\else
  \setbeamertemplate{blocks}[default]
\fi

% Customize title and part pages: optional rounded corners and shadows
\setbeamertemplate{title page}[default][%
  colsep=-4bp,%
  rounded=\beamer@themeinner@rounded,%
  shadow=\beamer@themeinner@shadowed]

\setbeamertemplate{part page}[default][%
  colsep=-4bp,%
  rounded=\beamer@themeinner@rounded,%
  shadow=\beamer@themeinner@shadowed]

% Numbered captions on figures/tables
\setbeamertemplate{caption}[numbered]

% Set appearance of list items
\setbeamertemplate{enumerate items}[default] % Numbers or letters
\setbeamertemplate{itemize items}[circle]    % Bullet points as circles

% Use circle bullets in the table of contents for sections/subsections
\setbeamertemplate{sections/subsections in toc}[circle]

% Return to all modes after applying settings
\mode<all>
